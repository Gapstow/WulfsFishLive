    background-color: #142434;
    padding: 53px 0 23px;

    h2 {
      position: relative;
      text-align: center;
      z-index: 1;
      
      &:before {
        border-top: 3px solid #ff7752;
        content: "";
        left: 0;
        margin: 0 auto;
        position: absolute;
        right: 0;
        top: 25%;
        width: 95%;
        z-index: -1;
      }

      label {
        background-color: #142434;
        color: white;
        font-size: 45px;
        letter-spacing: .03em;
        line-height: 52px;
        padding: 0 15px;
        text-align: center;
        display: inline-block;

        span {
          display: block;
          font-family: 'Raleway', sans-serif;
          font-size: 30px;
        }
      }
    }
  }

  .wholesale-featured-heading {
    padding-top: 60px;
    padding-bottom: 40PX;
    text-align: center;

    h3 {
      font-size: 35px;
      line-height: 41px;
      letter-spacing: 0.06em;
      text-transform: uppercase;
      color: #FF7752;
    }

    label {
      font-size: 25px;
    }

    p {
      font-size: 11px;
      line-height: 13px;
      text-transform: uppercase;
      color: #142434;
      opacity: 0.5;
    }
  }

  .wholesale-featured-lists {
    padding-bottom: 100px;
    @media(max-width: 800px) {
      padding-bottom: 50px;
    }

    .section {
      padding-bottom: 70px;
      border-bottom: 4px solid #FF7752;
    }

    .wholesale-featured-list {
      display: none;
      grid-template-columns: 1fr 1fr;
      grid-gap: 50px;

      @media(max-width: 500px) {
        grid-template-columns: 1fr;
      }

      &.active {
        display: grid
      }

      .featured-list-image {
        overflow: hidden;
        display: flex;
        @media(max-width: 500px) {
          flex-direction: column;
        }

        .featured-list-slider-nav {
          width: calc(19% - 4px);
          margin: 0 10px;
          @media(max-width: 500px) {
            width: 100%;
          }

          .thumbnail-image {
            margin-bottom: 10px;
          }

          .thumbnail-image__inner {
            padding-bottom: 100%;
            position: relative;
          }

          img {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
          }
        }

        .featured-list-slider-for {
          width: calc(81% - 16px);
          @media(max-width: 500px) {
            width: 100%;
            order: -1;
            margin-bottom: 15px;
          }

          .slider-banner-image__inner {
            padding-bottom: 100%;
            position: relative;
          }

          img {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
          }
        }
      }

      .featured-list-content {
        H3 {
          font-size: 35px;
          line-height: 41px;
          letter-spacing: .06em;
          text-transform: uppercase;
          color: #ff7752;
        }

        label {
          font-size: 25px;
          display: block;
        }

        span {
          font-size: 16px;
          display: block;
        }
    
        p {
          font-size: 13px;
          line-height: 17px;
          letter-spacing: 0.06em;
          color: #1D2D3C;
        }

        .featured-priority {
          margin-top: 30px;

          label {
            border-bottom: solid 2px black;
            color: black;
            font-size: 20px;
            font-weight: bold;
            text-transform: uppercase;
          }

          .featured-priority-num {
            margin-top: 20px;

            .priority-num-label {
              align-items: center;
              display: flex;
              justify-content: space-between;

              span {
                font-size: 13px;
                opacity: 0.8;
                text-transform: uppercase;
              }
            }

            .steps {
              display: flex;
              flex-direction: row;
              justify-content: space-between;
              position: relative;
              margin-top: 10px;

              &:before {
                content: "";
                width: 100%;
                display: block;
                height: 4px;
                position: absolute;
                top: 50%;
                left: 0;
                transform: translateY(-50%);
                background-color: rgba(133,133,133,0.8);
                z-index: 0;
              }
              
              .steps__item {
                width: 20px;
                height: 20px;
                display: flex;
                font-size: 0;
                justify-content: center;
                align-items: center;
                color: #fff;
                background-color: black;
                border-radius: 50px;
                margin-right: 80px;
                position: relative;
                @media(max-width: 500px) {
                  margin-right: 0;
                }

                &.steps__item--active{
                  background-color: white;
                  border: solid 2px black;
                }
                &:last-child{
                  margin-right: 0px;
                }
              }
            }
          }
        }
      }
    }

    .wholesale-featured-slides {
      max-width: 1100px;
      margin: 100px auto 0;

      .slick-track {
        .wholesale-featured-slide:nth-child(3n+1) {
          text-align: left;
        }
        .wholesale-featured-slide:nth-child(3n+2) {
          text-align: center;
        }
        .wholesale-featured-slide:nth-child(3n+3) {
          text-align: right;
        }
      }
      .slick-dots {
        margin-top: 15px;
        display: flex;
        justify-content: center;
        align-items: center;
        li {
          width: 15px;
          height: 15px;
          background: #ff7752;
          opacity: 0.4;
          margin-left: 3px;
          margin-right: 3px;
          border-radius: 33px;
          &.slick-active {
            opacity: 1;
          }
          button {
            display: none;
          }
        }
      }

      .slick-arrow {
        position: absolute;
        top: 50%;
        z-index: 1;
        transform: translateY(-50%);
        font-size: 0;
        border: none;
        background-color: transparent;
        width: 43px;
        height: 43px;
        background-repeat: no-repeat;
        background-size: contain;
        cursor: pointer;


        &.slick-prev {
          left: -10%;
          background-image: url({{ 'circle-left-arrow.png' | asset_url }});
        }

        &.slick-next {
          right: -10%;
          background-image: url({{ 'circle-right-arrow.png' | asset_url }});
        }
      }
      
      .wholesale-featured-slide {
        @media (max-width: 800px) {
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: flex-start;
          max-width: 300px;
          margin: auto;
          text-align: center;
        }

        label {
          display: block;
          font-size: 27px;
          font-family: 'Consort RR';
          line-height: 31px;
          letter-spacing: 0.06em;
          text-transform: uppercase;
          color: #142434;
          cursor: pointer;
          @media (max-width: 800px) {
            text-align: center;
          }
        }

        span {
          display: block;
          font-size: 15px;
          line-height: 31px;
          letter-spacing: 0.06em;
          color: #142434;
          cursor: pointer;
        }
    
        p {
          color: #FF7752;
          cursor: pointer;
        }

        img {
          margin: 0 auto;
        }
      }
    }
  }
}

