.wholesale-hero-banner {
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  height: 40vw;
  position: relative;
  @media(max-width: 500px) {
    height: 500px;
  }

  .wholesale-hero-logo {
    margin-left: 65px;
    img {
      width: 79px;
    }
  }

  .wholesale-hero-heading {
    background-position: center left;
    background-size: cover;
    color: #fff;
    display: inline-block;
    margin-right: 0;
    padding: 40px 30px 40px 11%;
    position: absolute;
    text-align: right;
    top: 50%;
    transform: translateY(-50%);
    right: 0;
    @media(max-width: 800px) {
      padding: 30px 40px 30px 80px;
    }

    h2 {
      font-size: clamp(40px, 10vw, 135px);
      line-height: 1;
      text-transform: capitalize;
      @media(max-width: 800px) {
        font-size: 55px;
      }
    }

    label {
      font-family: "Consort RR";
      font-size: clamp(30px, 10vw, 80px);
      line-height: 1;
      white-space: nowrap;
      @media(max-width: 800px) {
        font-size: 40px;
      }
    }
  }

  .wholesale-hero-content-btns {
    position: absolute;
    top: 65%;

    .wholesale-hero-content {
      p {
        color: white;
        font-family: "Consort RR";
        font-size: 35px;
        font-weight: 500;
        line-height: 41px;
        letter-spacing: 0.02em;
      }
    }

    .wholesale-hero-btns {
      margin-top: 15px;
      @media(max-width: 800px) {
        margin-top: 0;
      }

      a {
        border: 3px solid #FF7752;
        color: white;
        display: inline-block;
        font-family: "Raleway";
        font-size: 15px;
        font-style: normal;
        font-weight: 100;
        letter-spacing: 0.02em;
        line-height: 18px;
        padding: 10px;
        text-align: center;
        width: 265px;
        &:first-child {
          background-color: #FF7752;
        }
        &:last-child {
          background-color: transparent;
        }
      }
    }
  }
}

.wholesale-image-text {
  padding: 100px 0 50px;
  @media(max-width: 800px) {
    padding: 50px 0;
  }

  h2.background {
    position: relative;
    text-align: center;
    z-index: 1;

    &:before {
      border-top: 3px solid #FF7752;
      content: "";
      left: 0;
      margin: 0 auto;
      position: absolute;
      right: 0;
      top: 25%;
      width: 95%;
      z-index: -1;
    }

    span {
      background: #fff;
      color: #142434;
      font-size: 45px;
      letter-spacing: 0.03em;
      line-height: 52px;
      padding: 0 15px;
      text-align: center;
    }
  }

  .wholesale-image-text-block {
    align-items: center;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 30px;
    margin-top: 50px;
    @media(max-width: 500px) {
      grid-template-columns: 1fr;
    }

    .wholesale-text-block {
      h3 {
        color: #FF7752;
        font-size: 35px;
        font-weight: 500;
        line-height: 41px;
        letter-spacing: 0.06em;
        margin-bottom: 30px;
        text-transform: uppercase;
      }

      p {
        color: #1D2D3C;
        font-size: 15px;
        line-height: 18px;
        letter-spacing: 0.06em;
        margin-bottom: 25px;
      }

      label {
        color: #142434;
        font-family: 'Consort RR';
        font-size: 25px;
        font-weight: 500;
        line-height: 29px;
        letter-spacing: 0.06em;
        text-transform: uppercase;
      }

      .image-text-items {
        display: grid;
        grid-gap: 20px;
        grid-template-columns: repeat(4, 1fr);
        margin-top: 20px;
        @media(max-width: 500px) {
          grid-template-columns: repeat(2, 1fr);
        }

        .image-text-item {
          display: flex;
          flex-direction: column;
          justify-content: space-between;
          text-align: center;

          label {
            color: rgba(0, 0, 0, 0.4);
            display: block;
            font-family: 'Allison';
            font-size: 26px;
            line-height: 35px;
            letter-spacing: 0.01em;
          }

          span {
            color: #1D2D3C;
            display: block;
            font-size: 14px;
            letter-spacing: 0.06em;
            line-height: 16px;
          }
        }
      }
    }
  }
}

.wholesale-slides {
  .slick-arrow {
    position: absolute;
    top: 50%;
    z-index: 1;
    transform: translateY(-50%);
    font-size: 0;
    border: none;
    background-color: transparent;
    width: 43px;
    height: 43px;
    background-repeat: no-repeat;
    background-size: contain;
    cursor: pointer;


    &.slick-prev {
      left: 10%;
      background-image: url({{ 'slide-left-arrow.png' | asset_url }});

      &:hover {
        background-image: url({{ 'slide-left-arrow-hover.png' | asset_url }});
      }
    }

    &.slick-next {
      right: 10%;
      background-image: url({{ 'slide-right-arrow.png' | asset_url }});

      &:hover {
        background-image: url({{ 'slide-right-arrow-hover.png' | asset_url }});
      }
    }
  }

  .slick-dots {
    border-bottom: 3px solid #FF7752;
    margin: 0 70px;
    padding: 24px 0 40px;
    display: flex;
    align-items: center;
    justify-content: center;

    li {
      &.slick-active {
        button {
          color: #FF7752;
        }
      }
      button {
        font-size: 17px;
        line-height: 20px;
        text-align: center;
        letter-spacing: 0.03em;
        color: rgba(0, 0, 0, 0.4);
        border: none;
    background-color: transparent;
      }
    }
  }

  .wholesale-slide {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    .wholesale-slide-content {
      position: absolute;
      text-align: center;
      @media(max-width: 800px) {
        transform: translate(-50%, -50%);
        width: 100%;
      }

      h2 {
        font-size: 100px;
        line-height: 102px;
        text-align: center;
        letter-spacing: 0.03em;
        color: #FFFFFF;
        @media(max-width: 800px) {
          font-size: 55px;
          line-height: 1;
        }
      }

      label {
        display: block;
        font-style: normal;
        font-weight: 500;
        font-size: 35px;
        line-height: 41px;
        letter-spacing: 0.03em;
        color: white;
        @media(max-width: 800px) {
          font-size: 30px;
        }
      }

      span {
        font-family: 'ConsortRR';
        font-style: normal;
        font-weight: 500;
        font-size: 35px;
        line-height: 41px;
        letter-spacing: 0.03em;
        color: #FF7752;
        display: block;
        margin-top: 20px;
        @media(max-width: 800px) {
          font-size: 30px;
        }
      }

      p {
        font-size: 13px;
        line-height: 15px;
        text-align: center;
        letter-spacing: 0.03em;
        color: #FFFFFF;
        margin-top: 30px;
      }
    }
  }
}

.wholesale-glossary {
  padding: 70px 0;

  h2 {
    font-weight: 500;
    font-size: 45px;
    line-height: 52px;
    text-align: center;
    letter-spacing: 0.03em;
    color: #142434;
    text-align: center;
  }

  label {
    font-size: 15px;
    line-height: 18px;
    text-align: center;
    letter-spacing: 0.02em;
    color: #142434;
    text-align: center;
    display: block;
  }

  .wholesale-glossary-lists {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-gap: 26px;
    text-align: center;
    margin-top: 100px;
    @media(max-width: 800px) {
      grid-template-columns: repeat(2, 1fr);
      margin-top: 50px;
    }
    @media(max-width: 500px) {
      grid-template-columns: 1fr;
    }

    .wholesale-glossary-list {
      .glossary-list-image {
        height: 250px;
