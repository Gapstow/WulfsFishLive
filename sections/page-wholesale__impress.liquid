{% comment %}
** Image with text overlay - dynamic **
- Draggable section
{% endcomment %}

{% include 'include-wholesale__impress' %}
<div class="section-overlay"></div>

<style>
    #shopify-section-{{section.id}} .image-element__wrap {
        //max-height: 58vw;
    }
    #shopify-section-{{section.id}}  {
      position: relative;
    }
    #shopify-section-{{section.id}} .caption {
      z-index: 99;
    }
    #shopify-section-{{section.id}} .section-overlay {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      z-index: 5;
      background-color: {{ section.settings.overlay_color }};
      opacity: 0.{{ section.settings.overlay_opacity }};
    }
</style>

{% schema %}
{
  "name": "Image with text overlay",
  "class": "image-with-text-overlay image-with-text-overlay-head overlaid-header-option",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "1800 x 900px recommended"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image",
      "info": "900 x 1800px recommended"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "richtext",
      "id": "pretext",
      "label": "Preheading",
      "default": "<p>Preheading</p>"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Image Overlay Color",
      "default": "#aaaaaa"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 99,
      "step": 1,
      "default": 50,
      "unit": "%",
      "label": "Image Overlay Opacity"
    },
    {
      "type": "select",
      "id": "text_vertical_position",
      "label": "Vertical position",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "middle",
          "label": "Middle"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "middle"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wide",
      "options": [
        {
          "value": "half",
          "label": "Half"
        },
        {
          "value": "standard",
          "label": "Standard"
        },
        {
          "value": "wide",
          "label": "Wide"
        }
      ]
    }
  ]
}
{% endschema %}
