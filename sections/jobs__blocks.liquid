  <section class="section is-width-standard" data-section-id="{{ section.id }}">
    <div class="container">
      <div class="content">
        <div class="one-whole">
          <h1>{{ section.settings.title }}</h1>
          <p>{{ section.settings.subtitle }}</p>
        </div>
      </div>
    </div>
    {% for block in section.blocks %}
      <div class="container container-listing">
        <div class="content">
          <div class="one-whole">
            <h1>{{ block.settings.title }}</h1>
            <div>{{ block.settings.richtext }}</div>
          </div>
        </div>
      </div>
    {% endfor %}
  </section>


 {% schema %}
  {
    "name": "Jobs Blocks",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title",
        "default": "Title"
      },
      {
        "id": "subtitle",
        "type": "text",
        "label": "Subtitle",
        "default": "Subtitle"
      }
    ],
    "blocks": [
      {
        "type": "listing",
        "name": "Job Listing",
        "settings": [
          {
            "id": "title",
            "type": "text",
            "label": "Title",
            "default": "Title"
          },
          {
            "type": "richtext",
            "id": "richtext",
            "label": "Body",
            "default": "<p></p>"
          }
        ]
      }
    ]
  }
{% endschema %}
