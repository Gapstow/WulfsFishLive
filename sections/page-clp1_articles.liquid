{% comment %}
** Blog posts 1 - dynamic **
- Draggable section
{% endcomment %}

{% include 'include-featured-clp-articles' %}

<style>
#shopify-section-{{section.id}} h1.featured-collection__title {
  font-size: {{section.settings.title_size}}px;
}
#shopify-section-{{section.id}} h2.featured-collection__title {
  font-size: {{section.settings.subtitle_size}}px;
}
.blog-posts--gapstow .button--link-style:after, 
.blog-posts--gapstow .button--link-style:link:after, 
.blog-posts--gapstow .button--link-style:visited:after, 
.blog-posts--gapstow a.button--link-style.button:after, 
.blog-posts--gapstow a.button--link-style.button:link:after, 
.blog-posts--gapstow a.button--link-style.button:visited:after {
  background-image: url("{{ 'readMoreArrow.png' | asset_img_url }}");
}
/* */
</style>

{% schema %}

{
  "name": "Blog posts",
  "class": "blog-posts blog-posts--1 blog-posts--gapstow",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Recent blog posts"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading",
      "default": "Customer Favorites"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Heading size",
      "min": 14,
      "max": 100,
      "default": 46
    },
    {
      "type": "range",
      "id": "subtitle_size",
      "label": "Subheading size",
      "min": 14,
      "max": 100,
      "default": 61
    },
    {
      "type": "blog",
      "id": "blog_widget_select",
      "label": "Blog"
    },
    {
      "type": "range",
      "id": "home_page_articles",
      "label": "Posts",
      "min": 2,
      "max": 4,
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "basic_image",
      "label": "Use Basic Square Image"
    },
    {
      "type": "range",
      "id": "thumbnail_height",
      "label": "Image height",
      "min": 100,
      "max": 500,
      "step": 10,
      "default": 250,
      "unit": "px",
      "info": "Applied when Basic Square Image is selected"
    },
    {
      "type": "checkbox",
      "id": "blog_show_tags",
      "label": "Show tags",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "blog_author",
      "label": "Show author",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "blog_read_time",
      "label": "Show estimated read time",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "blog_date",
      "label": "Show date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "blog_comment_count",
      "label": "Show comment count",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "blog_show_excerpt",
      "label": "Show excerpts",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show-border",
      "label": "Show border",
      "default": true
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Read more"
    },
    {
      "type": "select",
      "id": "button_type",
      "label": "Button style",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "button--primary",
          "label": "Primary"
        },
        {
          "value": "button--secondary",
          "label": "Secondary"
        },
        {
          "value": "button--link-style",
          "label": "Link style"
        }
      ],
      "default": "button--primary"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wide",
      "options": [
        {
          "value": "standard",
          "label": "Standard"
        },
        {
          "value": "wide",
          "label": "Wide"
        }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top spacing",
      "min": 0,
      "max": 80,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom spacing",
      "default": 0,
      "min": 0,
      "max": 80,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Advanced"
    },
    {
      "type": "paragraph",
      "content": "[Learn more](https://help.outofthesandbox.com/hc/en-us/articles/360022329373)"
    },
    {
      "type": "text",
      "id": "css_class",
      "label": "CSS Class"
    },
    {
      "type": "textarea",
      "id": "custom_css",
      "label": "Custom CSS"
    }
  ],
  "blocks": [
    {
      "name": "Article",
      "type": "article",
      "settings": [
        {
          "type": "article",
          "id": "article",
          "label": "Article/Recipe"
        }
      ]
    }
  ]
}
{% endschema %}
